    <script>
        // 移动端菜单交互逻辑
        const menuBtn = document.getElementById('menuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        const menuIcon = menuBtn.querySelector('i');

        menuBtn.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            if (mobileMenu.classList.contains('hidden')) {
                menuIcon.classList.remove('fa-times');
                menuIcon.classList.add('fa-bars');
            } else {
                menuIcon.classList.remove('fa-bars');
                menuIcon.classList.add('fa-times');
            }
        });

        // 点击移动端菜单项后自动收起菜单
        const mobileMenuLinks = mobileMenu.querySelectorAll('a');
        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', function() {
                mobileMenu.classList.add('hidden');
                menuIcon.classList.remove('fa-times');
                menuIcon.classList.add('fa-bars');
            });
        });

        // MBTI测试核心逻辑
        let currentQuestionIndex = 0;
        let userAnswers = {};
        const mbtiDimensions = ['E/I', 'S/N', 'T/F', 'J/P'];
        
        // 测试题库（10题，覆盖4个维度）
        const questions = [
            { text: "在聚会中，你更倾向于？", options: [{key:'E', text:'A. 主动和新朋友交流，成为焦点'}, {key:'I', text:'B. 待在熟悉的人身边，安静观察'}], dimension: 'E/I' },
            { text: "获取信息时，你更相信？", options: [{key:'S', text:'A. 具体的事实和经验'}, {key:'N', text:'B. 直觉和未来的可能性'}], dimension: 'S/N' },
            { text: "做决策时，你更依赖？", options: [{key:'T', text:'A. 逻辑分析和客观标准'}, {key:'F', text:'B. 个人价值观和他人感受'}], dimension: 'T/F' },
            { text: "安排生活时，你更偏好？", options: [{key:'J', text:'A. 有计划、有条理的生活'}, {key:'P', text:'B. 灵活、随性的生活'}], dimension: 'J/P' },
            { text: "遇到问题时，你会先？", options: [{key:'E', text:'A. 找朋友讨论寻求建议'}, {key:'I', text:'B. 自己独立思考解决方案'}], dimension: 'E/I' },
            { text: "学习新知识时，你更关注？", options: [{key:'S', text:'A. 细节和具体应用'}, {key:'N', text:'B. 框架和整体概念'}], dimension: 'S/N' },
            { text: "评价他人时，你更看重？", options: [{key:'T', text:'A. 能力和效率'}, {key:'F', text:'B. 品德和友善'}], dimension: 'T/F' },
            { text: "面对截止日期，你通常？", options: [{key:'J', text:'A. 提前完成，留出缓冲时间'}, {key:'P', text:'B. 临近截止才高效完成'}], dimension: 'J/P' },
            { text: "空闲时间，你更愿意？", options: [{key:'E', text:'A. 参加户外活动或聚会'}, {key:'I', text:'B. 在家看书或看电影'}], dimension: 'E/I' },
            { text: "看待规则时，你认为？", options: [{key:'J', text:'A. 规则是秩序的保障，应该遵守'}, {key:'P', text:'B. 规则是灵活的，可以根据情况调整'}], dimension: 'J/P' }
        ];

        // 开始测试
        function startTest() {
            document.getElementById('home-page').classList.add('hidden');
            document.getElementById('test-page').classList.remove('hidden');
            document.getElementById('result-page').classList.add('hidden');
            currentQuestionIndex = 0;
            userAnswers = {};
            renderQuestion();
        }

        // 重新测试
        function restartTest() {
            startTest();
        }

        // 渲染当前题目
        function renderQuestion() {
            const question = questions[currentQuestionIndex];
            document.getElementById('current-question').textContent = currentQuestionIndex + 1;
            document.getElementById('total-questions').textContent = questions.length;
            document.getElementById('question-text').textContent = question.text;
            
            // 渲染选项
            const optionsList = document.getElementById('options-list');
            optionsList.innerHTML = '';
            question.options.forEach(option => {
                const btn = document.createElement('button');
                btn.className = 'w-full py-3 px-4 border rounded-lg text-left hover:border-primary transition-colors';
                btn.textContent = option.text;
                btn.onclick = () => selectOption(option.key, question.dimension);
                // 高亮已选选项
                if (userAnswers[question.dimension] === option.key) {
                    btn.classList.add('option-active');
                }
                optionsList.appendChild(btn);
            });

            // 更新进度条
            const progress = ((currentQuestionIndex + 1) / questions.length) * 100;
            document.getElementById('progress-bar').style.width = `${progress}%`;

            // 控制按钮显示
            document.getElementById('prev-btn').classList.toggle('hidden', currentQuestionIndex === 0);
            document.getElementById('next-btn').classList.toggle('hidden', currentQuestionIndex === questions.length - 1);
            document.getElementById('submit-btn').classList.toggle('hidden', currentQuestionIndex !== questions.length - 1);
        }

        // 选择选项
        function selectOption(key, dimension) {
            userAnswers[dimension] = key;
            // 高亮选中的选项
            const options = document.querySelectorAll('#options-list button');
            options.forEach(btn => btn.classList.remove('option-active'));
            event.target.classList.add('option-active');
        }

        // 上一题
        function prevQuestion() {
            if (currentQuestionIndex > 0) {
                currentQuestionIndex--;
                renderQuestion();
            }
        }

        // 下一题
        function nextQuestion() {
            if (currentQuestionIndex < questions.length - 1) {
                currentQuestionIndex++;
                renderQuestion();
            }
        }

        // 提交测试
        function submitTest() {
            // 计算MBTI类型
            let mbtiType = '';
            mbtiType += userAnswers['E/I'] || 'I'; // 默认内向
            mbtiType += userAnswers['S/N'] || 'N'; // 默认直觉
            mbtiType += userAnswers['T/F'] || 'F'; // 默认情感
            mbtiType += userAnswers['J/P'] || 'J'; // 默认判断

            // 显示结果
            document.getElementById('mbti-type').textContent = mbtiType;
            document.getElementById('test-page').classList.add('hidden');
            document.getElementById('result-page').classList.remove('hidden');
        }
    </script>
</body>
</html>
